@model IEnumerable<TheBugTracker.Models.Invite>
@using Microsoft.AspNetCore.Identity
@inject SignInManager<BTUser> _signInManager

@{
    ViewData["Title"] = "Index";
}

<h1>Invites (@Model.Count())</h1>
@if(!_signInManager.IsSignedIn(User))
{
    <a class="btn btn-primary" asp-controller="Home" asp-action="SeedInvites">Seed</a>        
    <a class="btn btn-outline-primary" asp-controller="Home" asp-action="UnseedInvites">Unseed</a>
}
<p class="mt-3">
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table table-responsive-xl">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.InviteDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JoinDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CompanyToken)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InviteeEmail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InviteeFirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InviteeLastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsValid)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Project)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Invitor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Invitee)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.InviteDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JoinDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CompanyToken)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InviteeEmail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InviteeFirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InviteeLastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsValid)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Company.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Project.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Invitor.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Invitee.FullName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
