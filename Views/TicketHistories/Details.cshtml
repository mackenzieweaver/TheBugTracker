@model TheBugTracker.Models.TicketHistory

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>TicketHistory</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Property)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Property)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.OldValue)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OldValue)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NewValue)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NewValue)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Created)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Created)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Ticket)
        </dt>
        <dd class = "col-sm-10">
            <a asp-controller="Tickets" asp-action="Details" asp-route-id="@Model.TicketId" class="text-dark text-decoration-underline">
                @Html.DisplayFor(model => model.Ticket.Id)
            </a>
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd class = "col-sm-10">
            <a asp-controller="Users" asp-action="Profile" asp-route-id="@Model.UserId" class="text-dark text-decoration-underline">
                @Html.DisplayFor(model => model.User.FullName)
            </a>
        </dd>
    </dl>
</div>
