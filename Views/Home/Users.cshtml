@model IEnumerable<TheBugTracker.Models.BTUser>

@{
    ViewData["Title"] = "Index";
}

<h1>Users (@Model.Count())</h1>
<a class="btn btn-primary" asp-controller="Home" asp-action="SeedUsers">Seed</a>     
<a class="btn btn-outline-primary" asp-controller="Home" asp-action="UnseedUsers">Unseed</a>
<p><em>Seed data from <a href="https://randomuser.me/" target="_blank">randomuser.me</a></em></p>

<p><a href="#">Create New</a></p>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Email)</th>
            <th>@Html.DisplayNameFor(model => model.FirstName)</th>
            <th>@Html.DisplayNameFor(model => model.LastName)</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Email)</td>
            <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
            <td>@Html.DisplayFor(modelItem => item.LastName)</td>
        </tr>
}
    </tbody>
</table>
