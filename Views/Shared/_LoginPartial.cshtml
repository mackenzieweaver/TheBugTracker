@using Microsoft.AspNetCore.Identity
@using TheBugTracker.Data
@inject SignInManager<BTUser> SignInManager
@inject UserManager<BTUser> UserManager
@inject ApplicationDbContext _context

@{
    BTUser user = null;
    int notifications = 0;
    if(SignInManager.IsSignedIn(User))
    {
        user = await UserManager.GetUserAsync(User);
        notifications = _context.Notifications.Where(x => x.RecipientId == user.Id).Count();
    }
}

<style>
    #bell:hover{
        cursor: pointer;
    }
    #notifications{
        position: absolute;
        right: 4px;
        top: -6px;
        background-color: red;
        border-radius: 50%;
        color: white;
        font-weight: bold;
        padding: 4px 6px;
        font-size: 10px;
    }
</style>

<ul class="navbar-nav flex-column">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
                <div class="row">
                    <div class="col-auto">
                        <a asp-controller="Users" asp-action="Profile" asp-route-id="@user.Id">
                            <img style="border-radius: 50%; height: 75px;" src="@user.AvatarFileName" alt="" class="">
                        </a>
                    </div>
                    <div class="col">
                        <a asp-controller="Users" asp-action="Profile" asp-route-id="@user.Id" class="nav-link text-dark p-0">
                            <p class="m-0">@user.FullName,</p>
                        </a>
                        <form style="display: inline;" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                            <input value="Logout" type="submit" class="btn text-dark underlinep p-0" style="text-decoration: underline; margin-bottom: 6px;" />
                        </form>
                    </div>
                    <div class="col-auto">
                        <form id="bell" asp-controller="Notifications" asp-action="Index">
                            <input name="id" type="hidden" value="@user.Id" />
                            <i class="fas fa-bell fa-2x"></i>
                            <span id="notifications">@notifications.ToString()</span>
                        </form>
                    </div>
                </div>
            <hr>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
            <hr>
        </li>
    }
</ul>

<script>
    const bell = document.getElementById('bell')
    bell.addEventListener('click', () => bell.submit())
</script>