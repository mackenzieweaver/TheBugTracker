<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        .customcontainer {
            max-height: 100vh;
            max-width: 100%;
            overflow: auto;
        }
        ::-webkit-scrollbar {
            width: 12px;
            height: 12px;
        }
        ::-webkit-scrollbar-thumb {
            background: #3e87d1;
            border-radius: 13px;
        }
        ::-webkit-scrollbar-thumb:hover {
            background: #3e87d1;
        }
        ::-webkit-scrollbar-track {
            background: #FFFFFF;
            border: 4px solid #FFFFFF;
            border-radius: 13px;
        }
    </style>
    <script src="https://kit.fontawesome.com/8b5ae67e5c.js" crossorigin="anonymous"></script>
</head>

<body class="row m-0">

    <div class="col-12 col-sm-4 col-lg-3 col-xl-2 p-0 customcontainer">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-right box-shadow p-0">

            <button class="navbar-toggler m-3" type="button" data-toggle="collapse" data-target=".navbar-collapse"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1 flex-sm-column p-3" style="height: 100vh">
                    <li class="nav-item"><partial name="_LoginPartial" /></li>
                    <li class="nav-item"><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="nav-item"><a class="nav-link text-dark" asp-area="" asp-controller="Users" asp-action="Index">Users</a></li>
                    <li class="nav-item"><a class="nav-link text-dark" asp-area="" asp-controller="Companies" asp-action="Index">Companies</a></li>
                    <li class="nav-item"><a class="nav-link text-dark" asp-area="" asp-controller="Projects" asp-action="Index">Projects</a></li>
                    <li class="nav-item"><a class="nav-link text-dark" asp-area="" asp-controller="Tickets" asp-action="Index">Tickets</a></li>
                    <li class="nav-item"><a class="nav-link text-dark" asp-area="" asp-controller="Invites" asp-action="Index">Invites</a></li>
                    <li class="nav-item"><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a></li>
                </ul>
            </div>

        </nav>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <div class="col p-3 customcontainer">
        @RenderBody()
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
